<div class="row">
  <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group mr-2" role="group" aria-label="First group">

      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= item.sku %>">
        Sku: <%= item.sku %>
      </button>
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= title(item) %>">
        Title
      </button>
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= raw_retail(item) %>">
        Retail: <%= raw_retail(item) %>
      </button>
    </div>

    <div class="btn-group" role="group" aria-label="Second group">
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= tagline(item) %>">
        Tagline
      </button>
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= prop_room(item) %>">
        PR Room
      </button>
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= build_description(item) %>">
        Description
      </button>
    </div>

    <div class="btn-group mr-2" role="group" aria-label="Third group">
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= width_height(item)[0] %>">
        W: <%= width_height(item)[0] %>
      </button>
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= width_height(item)[-1] %>">
        H: <%= width_height(item)[-1] %>
      </button>
    </div>

    <div class="btn-group mr-2" role="group" aria-label="Third group">
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= width_height(item)[0] %>">
        FW:
      </button>
      <button type="button" class="btn btn-info clipboard-btn" data-clipboard-action="copy" data-clipboard-text="<%= width_height(item)[-1] %>">
        FH:
      </button>
    </div>

  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p><%= tagline(item) %></p>
    <p><%= prop_room(item) %></p>
    <p><%= build_description(item) %></p>
    <p><%= seal(item) %></p>
  </div>
</div>
