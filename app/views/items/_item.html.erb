<%= content_tag :div, id: "item-#{item.id}" do %>
  <tr>
    <div class="row">
      <td class="align-middle">
        <div class="xs-col-1">
          <h4>
            <%= link_to item_sku(item), edit_invoice_item_path(item.invoice, item) %> |
            <% if artists(item)[0].present? %>
              <%= link_to artists(item)[0], artist_path(item.artists.first) %> |
            <% end %>
            <%= title_header(item) %>
          </h4>
        </div>
        <div class="xs-col-11">
          <p><%= inv_tagline(item) %></p>
          <p><%= render 'items/buttons', item: item %></p>
        </div>
      </td>
    </div>
  </tr>
<% end %>
