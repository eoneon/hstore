<div class="field">
  <%= f.label field.name %><br/>
  <%# if parent.properties? %>
  <% if parent.properties? && parent.properties["#{field.name}"].present? %>
    <%#= f.select field.name, options_for_select(value_list(field.name), { :selected => parent.properties["#{field.name}"] }) %>
    <%= f.select :name, options_for_select(ValueItem.where(kind: field.name).pluck(:name), { :selected => parent.properties["#{field.name}"] }) %>
  <% else %>
    <%= f.select field.name, options_for_select(ValueItem.where(kind: field.name).pluck(:name), { :selected => nil } ) %>
  <% end %>
</div>
