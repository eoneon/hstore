<%= form_for [@invoice, @item], :html => {:id => 'item_form'} do |f| %>
  <%= render "items/hidden", f: f %>

  <script type="text/javascript">
    function submitform(){
      $('#redirect_location').val(':edit');
      $('#item_form').submit();
    }
  </script>
  <script type="text/javascript">
    function reload(){
      var item_type_id = $('#selectItemtype').val();
      $('#item_item_type_id').val('item_type_id');
    }
  </script>

  <div class="row">
    <div class="col-md-2">
      <%= f.label :sku %><br>
      <%= f.text_field :sku %>
    </div>
    <div class="col-md-2">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="col-md-2">
      <%= f.label :retail %><br>
      <%= f.text_field :retail %>
    </div>
  </div><br>

  <div class="row">
    <div class="col-md-6">
      <%= link_to_add_fields "Add Field", f, :artist_items, "items" %>
      <%= f.fields_for :artist_items do |builder| %>
        <%= render 'items/artist_item_fields', f: builder %>
      <% end %>
    </div>

    <div class="col-md-2">
      <%= link_to_add_fields "Add Field", f, :artists, "items" %>
      <%= f.fields_for :artists, @item.artists.build do |builder| %>
        <%= render 'items/artist_fields', f: builder, item: @item %>
      <% end %>
    </div>

  </div>
  <br>

  <%= render "items/properties", parent: @item, f: f %>
  <%= f.submit "Save" %>

<% end %>
