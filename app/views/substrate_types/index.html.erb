<p id="notice"><%= notice %></p>

<h1>Listing Substrate Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @substrate_types.each do |substrate_type| %>
      <tr>
        <td><%= substrate_type.name %></td>
        <td><%= link_to 'Show', substrate_type %></td>
        <td><%= link_to 'Edit', edit_substrate_type_path(substrate_type) %></td>
        <td><%= link_to 'Destroy', substrate_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

