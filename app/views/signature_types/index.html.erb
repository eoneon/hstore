<p id="notice"><%= notice %></p>

<h1>Listing Signature Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @signature_types.each do |signature_type| %>
      <tr>
        <td><%= signature_type.name %></td>
        <td><%= link_to 'Show', signature_type %></td>
        <td><%= link_to 'Edit', edit_signature_type_path(signature_type) %></td>
        <td><%= link_to 'Destroy', signature_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

